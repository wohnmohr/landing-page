---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<section id="contactus" class="pb-20">
  <Container>
    <div
      class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900"
    >
      <div class="absolute right-0 top-0 h-full w-full flex justify-end">
        <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
          <span class="absolute w-16 h-16 -top-1 -right-1 rounded-md rotate-45"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -right-1 rounded-md rotate-45"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -left-1 rounded-md rotate-45"
          ></span>
        </div>
      </div>

      <div class="absolute left-0 bottom-0 h-full w-full flex items-end">
        <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
          <span class="absolute w-16 h-16 -top-1 -right-1 rounded-md rotate-45"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -right-1 rounded-md rotate-45"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -left-1 rounded-md rotate-45"
          ></span>
        </div>
      </div>
      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
        <h1
          class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight
          font-bold text-heading-1"
        >
          From <span
            class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600"
            >Concept to Code</span
          >, Where Your Ideas Come to Life.
        </h1>
        <Paragraph className={"pt-10"}>
          Bring your ideasâ€”watch them become reality with us.
        </Paragraph>
        <div class="mx-auto max-w-md sm:max-w-xl pt-10">
          <iframe
            data-tally-src="https://tally.so/embed/wv4Jv0?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
            loading="lazy"
            width="100%"
            height="300"
            title="Wohnmohr Contact Form"></iframe>
        </div>
      </div>
      <!-- Calendly block -->
      <div class="mt-6 text-center relative" id="software_solutions">
        <h2 class="text-lg md:text-xl font-semibold text-heading-2">
          Ready to create? Let's build your dream!
        </h2>
        <div
          class="calendly-inline-widget pr-8"
          data-url="https://calendly.com/wohnmohr-contact/30min"
          style="min-width:320px;height:700px;"
        >
        </div>
      </div>
    </div>
  </Container>
</section>
